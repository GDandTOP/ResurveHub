# Supabase Configuration
# 아래 값들을 Supabase Dashboard에서 확인하여 입력하세요
# Project Settings → API 에서 확인 가능합니다

# Supabase Project URL (예: https://xxxxxxxxxxxxx.supabase.co)
NEXT_PUBLIC_SUPABASE_URL=your-project-url

# Supabase Anonymous Key (클라이언트에서 사용)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (서버에서만 사용, 절대 노출 금지!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# PortOne Payment Configuration (V2)
# 포트원 관리자콘솔(https://admin.portone.io/)에서 발급받은 값을 입력하세요

# Store ID (클라이언트에서 사용)
# 관리자콘솔 > 상점・채널 관리 > 상점 ID
NEXT_PUBLIC_PORTONE_STORE_ID=store-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Channel Key (클라이언트에서 사용)
# 관리자콘솔 > 상점・채널 관리 > 채널 키
NEXT_PUBLIC_PORTONE_CHANNEL_KEY=channel-key-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# V2 API Secret (서버에서 사용, 절대 노출 금지!)
# 관리자콘솔 > 개발자 설정 > API Keys > V2 API Secret
PORTONE_V2_API_SECRET=your_v2_api_secret_here

# 결제 환경 (development: 테스트 환경, production: 실제 결제)
NEXT_PUBLIC_PAYMENT_ENV=development

# ========== 레거시 설정 (PortOne V1 - 사용하지 않으면 삭제 가능) ==========
# 가맹점 식별코드 (imp로 시작, V1에서만 사용)
# NEXT_PUBLIC_PORTONE_IMP_CODE=imp12345678

# REST API 키 (V1에서만 사용)
# PORTONE_API_KEY=your_api_key_here

# REST API Secret (V1에서만 사용)
# PORTONE_API_SECRET=your_api_secret_here

